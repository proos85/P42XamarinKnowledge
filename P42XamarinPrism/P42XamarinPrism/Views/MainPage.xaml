<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P42XamarinPrism.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Button Text="Awesome button" 
                IsEnabled="{Binding IsAwesomeButtonEnabled}"
                IsVisible="{Binding IsAwesomeButtonEnabled}"
                Command="{Binding AwesomeButtonCommand}"/>
        
        <Button Text="Network state" 
                Command="{Binding NetworkStateCommand}"/>
    </StackLayout>

</ContentPage>